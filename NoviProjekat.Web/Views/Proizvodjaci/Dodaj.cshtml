@model NoviProjekat.Data.EntityModels.Proizvodjac

@{
    ViewData["Title"] = "Create";
}


<h4>Dodaj novog proizvođača</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Dodaj" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slika" class="control-label"></label>
                <input required type="file" id="files" asp-for="Slika" />
                <span asp-validation-for="Slika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary" asp-action="Prikazi">Nazad na listu</a>
</div>


