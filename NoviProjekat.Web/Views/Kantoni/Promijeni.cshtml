@model NoviProjekat.Data.EntityModels.Kanton

@{
    ViewData["Title"] = "Promijeni";
}

<h2>Promijeni</h2>

<h4>Kanton</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Promijeni">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sačuvaj" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="ajaxMoj" asp-action="Prikazi">Nazad na listu</a>

</div>