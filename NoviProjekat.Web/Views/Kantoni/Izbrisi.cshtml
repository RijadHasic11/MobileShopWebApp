@model NoviProjekat.Data.EntityModels.Kanton

@{
    ViewData["Title"] = "Brisanje";
}

<h2>Brisanje kantona</h2>

<h3>Jeste li sigurni da želite izbrisati ovo?</h3>
<div>
    <h4>Kanton</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naziv)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>
    </dl>

    <form asp-action="Izbrisi">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Izbriši" class="btn btn-default" />
        |
        <a class="ajaxMoj" asp-action="Prikazi">Nazad na listu</a>
    </form>
</div>


