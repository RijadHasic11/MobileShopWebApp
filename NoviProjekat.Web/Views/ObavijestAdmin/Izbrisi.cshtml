@model NoviProjekat.Data.EntityModels.ObavijestAdmin

@{
    ViewData["Title"] = "Izbrisi";
}


<h3>Izbrisati obavijest?</h3>
<div>
    <h4>Obavijest</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Naslov)
        </dd>

    </dl>

    <form asp-action="Izbrisi">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Izbrisi" class="btn btn-danger" /> |
        <a asp-action="Prikazi">Nazad na listu</a>
    </form>
</div>


