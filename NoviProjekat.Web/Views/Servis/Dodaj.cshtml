@using NoviProjekat.Web.ViewModels

@model ServisDodajVM
@{
    ViewData["Title"] = "Dodaj";

}

<h2>Dodaj novi servis</h2>


<form asp-action="Snimi" asp-controller="Servis">
    <div class="form-group">
        <label>DatumPrimanja: </label>
        <div>
            <input asp-for="DatumPrimanja" class="form-control" />

        </div>
    </div>

    <div class="form-group">
        <label>Opis: </label>
        <div>
            <input asp-for="Opis" class="form-control" />

        </div>
    </div>


    <div class="form-group">
        <label>Klijent : </label>
        <div>
            <select name="KlijentId" class="form-control">
                @foreach (var x in Model.klijenti)
                {
                    <option value="@x.Value">@x.Text</option>
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label>Artikal : </label>
        <div>
            <select name="ArtikalId" class="form-control">
                @foreach (var x in Model.artikli)
                {
                    <option value="@x.Value">@x.Text</option>
                }
            </select>
        </div>
    </div>


    <input type="submit" value="Snimi" />
</form>
